		http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd">

	<mongo:mongo host="localhost" port="27017"></mongo:mongo>
	<mongo:db-factory dbname="banana-test" mongo-ref="mongo" />
	<mongo:template db-factory-ref="mongoDbFactory" />
	<bean class="os.banana.db.mongodb.SimpleMeasureDataSaver"></bean>
</beans>
